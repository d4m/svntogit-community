pkgname=kcm-fcitx5
pkgver=0.0.0.20200322
_commit=d33ce561a02d54735b8553aa602b67a67f576b69
pkgrel=1
pkgdesc="KDE Config Module for Fcitx5"
arch=('x86_64')
url="https://github.com/fcitx/kcm-fcitx5"
license=('GPL')
depends=('fcitx5-qt' 'knewstuff' 'kcmutils')
makedepends=('extra-cmake-modules' 'python')
source=("https://github.com/fcitx/kcm-fcitx5/archive/$_commit/kcm-fcitx5-$_commit.tar.gz")
sha512sums=('5c910a5dbd39ec99457a7dc0d95d0f60a33975fdee91a5414705636b763d06e423cb1ad0526f3803380d46940343d15c106459c7a8ec3401008da3fd1d98d958')

build(){
  cd $pkgname-$_commit

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib -DKDE_INSTALL_USE_QT_SYS_PATHS=ON .
  make
}

package() {
  cd $pkgname-$_commit
  make DESTDIR="$pkgdir" install
}
