pkgname=kcm-fcitx5
pkgver=0.0.0.20200324
_commit=2ee6f7838420151dc839776cbbae22ceefa02662
pkgrel=1
pkgdesc="KDE Config Module for Fcitx5"
arch=('x86_64')
url="https://github.com/fcitx/kcm-fcitx5"
license=('GPL')
depends=('fcitx5-qt' 'knewstuff' 'kcmutils')
makedepends=('extra-cmake-modules' 'python')
source=("https://github.com/fcitx/kcm-fcitx5/archive/$_commit/kcm-fcitx5-$_commit.tar.gz")
sha512sums=('583931b5ca3a752ea99b8ac714612a2a427ef28c6eaae6e10fb0fab5f4a062343c6c5d930757105ae2fa07ec21e619656695fdf6681086a35d3db335b31ad374')

build(){
  cd $pkgname-$_commit

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib -DKDE_INSTALL_USE_QT_SYS_PATHS=ON .
  make
}

package() {
  cd $pkgname-$_commit
  make DESTDIR="$pkgdir" install
}
